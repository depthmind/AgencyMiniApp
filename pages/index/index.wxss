.container_index {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.exceptProduct {
  background-image: url('http://m.tourmade.com/sites/all/themes/tourmade_m_v3/images/banner/home-banner.jpg');
  background-size: 100%,50%;
  display: flex;
  flex-direction: column;
}
.header {
  display: flex;
  flex-direction: row;
  width: 100%;
  top: 10rpx;
}
.location {
  display: flex;
  position: flex;
  margin-left: 20rpx;
  width: 155rpx;
}
.location-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: #ccc
}
.search {
  display: flex;
  height: 80%;
  margin-top: 2rpx;
  margin-left: 120rpx;
  margin-right: 10rpx;
  margin-bottom: 2rpx;
  background-color: white;
  border: 0rpx solid #000;
  border-radius:50rpx; 
}
.searchcion {
  margin-top: 6rpx;
  margin-left: 20rpx;
  display: flex;
}
.searchInput {
  display: flex;
  flex-direction: row;
}
.searchInputText {
  font-size: 30rpx;
}

.swiper-view {
  display: flex;
  justify-content: center;
  height: 40%;
  width: 80%;
}

.u-wrp-bnr {
  width: 80%;
  display: flex;
  background: #f0f0f0;
}

.swiper-item {
  width: 100%;
  height: 100%;
}

.u-img-slide {
  display: flex;
  width: 100%;
  height: 70%;
}

.u-text-slide {
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  margin-bottom: 3rpx;
}

.flexRowContainer {
  display: flex;
  flex-direction: row;
}

.flexRowSon {
  display: flex;
  flex: 1;
  border: black 3rpx solid;
}

