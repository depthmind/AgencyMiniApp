.productType-tab {
  width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}

.productType-tab-item {
  flex: 1; 
    color:#434343;
}

.active{
    color:#F65959;
    border-bottom: 4rpx solid #F65959;
}


.products{
	float:none;
	width:100%;
	flex-direction:row-reverse;
	zoom:1;
	overflow:hidden;
	padding: 30rpx 20rpx 0;
	background: #fff;
	border-radius: 16rpx;
	box-shadow: 0 0 10rpx #e4e4e4;
	box-sizing: border-box;
	position:relative;
}
.product-item{
	overflow:hidden;
	box-sizing:border-box;
	position:relative;
	border-bottom: 2rpx solid #e6e6e6;
	padding: 16rpx;
	padding-left: 136rpx;
	width: 100%;
	margin: 0;
	border-radius: 0;
	min-height: 132rpx;
	color: #434343;
	text-decoration: none;
	display: block;
}
.product-item .name{
	float: left;
	font-size: 24rpx;
	font-weight: bold;
	color: #434343;
	margin: 10rpx 0;
	padding: 0;
	background: none;
}
.product-item .content{
	color:#2cca90;
}

