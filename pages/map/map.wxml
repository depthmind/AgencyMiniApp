<!--pages/map/map.wxml-->
<view>
  <map
    id="map"
    longitude="{{longitude}}"
    latitude="{{latitude}}"
    scale="14"
    controls="{{controls}}"
    bindcontroltap="controltap"
    markers="{{markers}}"
    bindmarkertap="markertap"
    polyline="{{polyline}}"
    bindregionchange="regionchange"
    show-location
    style="width: 100%; height: 300px;"
  >
    <cover-view>
      <cover-image style='width:80px;height:80px;' src="/images/address.png" />
    </cover-view>
  </map>
  <view>
    <view>城市</view>
    <input bindconfirm='searchAddress' placeholder='小区/写字楼/学校等'></input>
  </view>
  <button bindtap="nearby_search">搜索周边KFC</button>
</view>
