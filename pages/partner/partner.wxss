.title {
  font-size: 32rpx; 
  color: #000000;
}

button{
	background:#ff7419;
	color:#fff;
	border: none;
	line-height:2.2;
	margin: 30px 0 0;
	font-size: 40rpx;
	border-radius: 0;
	width: 100%;
	border: 0;
}

.message{
	float:none;
	width:100%;
	flex-direction:row-reverse;
	zoom:1;
	overflow:hidden;
	padding: 30rpx 0 0;
	background: #fff;
	border-radius: 16rpx;
	box-sizing: border-box;
	position:relative;
	margin: 40rpx 0;
}

.form{
	background: #fff;
	border-radius: 20rpx;
	padding: 20rpx 40rpx;
	margin:40rpx 0;
	box-sizing: border-box;
}
.form .form-item{
	box-sizing: border-box;
	width:100%;
	border-bottom: 2rpx solid #dedede;
	position:relative;
	font-size:36rpx;
}
.form .form-item .label{
	position:absolute;
	left:0;
	line-height:100rpx;
}
.form .form-item .label text,
.textarea-label text{
	color: red;
}
.form .form-item input{
	height: 100rpx;
	padding-left: 135rpx;
}
.form .form-item textarea{
	height: 130rpx;
	border: 2rpx solid #dedede;
	width:100%;
	padding: 10rpx;
	box-sizing: border-box;
	z-index: 1;
}
.textarea-label{
	line-height: 80rpx;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 32rpx;
  color: #030303;
  text-align: center;
  font-weight: bold;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 100%;
  color: #ec5300;
  text-align: center;
}
.shouyi{
  width: 140rpx;
  float: left;
  position: relative;
  padding: 0 10rpx 0 66rpx;
  text-align: center;
  line-height: 1.2;
}
.shouyi image{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  left: 10rpx;
  top: 16rpx;
}
.shouyi view{
  font-size: 32rpx;
}
.shouyi text{
  font-size: 30rpx;
}