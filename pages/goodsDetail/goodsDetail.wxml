<view style="position: relative; padding-bottom: 50px;">
<!-- 头部 -->
  <view style="background: #fff; margin: 0 -40rpx 10px -40rpx; padding: 20rpx 40rpx;">
  <image class="itemimage" src='{{firstPic}}'></image>
    <view class="title">名称：{{goods.goodsName}}</view>
    <view class="price">价格：￥{{goods.price}}</view>
    <view class="stock">库存：{{goods.stock}}</view>
  </view>
  <view style="background: #fff; margin: 0 -40rpx 10px -40rpx; padding: 20rpx 40rpx;">
    <view class="section-title">商品介绍</view>
    <view class='description'>{{goodsDescription}}</view>
    <view class="section-title">商品图文</view>
    <view wx:for="{{goodsPicArr}}">
      <image style="width: 600rpx; height: 600rpx; margin-left: 35rpx;" src='{{goodsPicArr[index]}}'></image>
    </view>
  </view>
  <!-- <view class="booking">立即购买</view> -->
</view>

<view class="flex-row bar-bottom">
            <view class="flex-grow-0 flex-row">
                <navigator class="flex-grow-0 flex-y-center bar-bottom-btn" openType="redirect" url="/mch/shop/shop?mch_id={{goods.mch.id}}" wx:if="{{goods.mch}}">
                    <view>
                        <image src="{{__wxapp_img.store.store.url}}"></image>
                        <text>店铺</text>
                    </view>
                </navigator>
                <navigator class="flex-grow-0 flex-y-center bar-bottom-btn" openType="switchTab" url="/pages/index/index">
                    <view>
                        <image src="../../images/首页.png"></image>
                        <text>首页</text>
                    </view>
                </navigator>
                <view bindtap="favoriteRemove" class="flex-grow-0 flex-y-center bar-bottom-btn" wx:if="{{isFavorited}}">
                    <view>
                        <image src="{{favorite_img_url}}"></image>
                        <text>已收藏</text>
                    </view>
                </view>
                <view bindtap="favoriteAdd" class="flex-grow-0 flex-y-center bar-bottom-btn" wx:else>
                    <view>
                        <image src="{{favorite_img_url}}"></image>
                        <text>收藏</text>
                    </view>
                </view>
            </view>
            <view class="flex-grow-1 flex-row">
            <view bindtap="backToAgencyDetail" data-mobilephone='{{agency.mobilephone}}' class="flex-grow-1 flex-y-center flex-x-center buy-now">一键拨号</view>
                <!-- <view bindtap="addCart" class="flex-grow-1 flex-y-center flex-x-center add-cart">加入购物车</view> -->
                <!-- <view bindtap="buyNow" class="flex-grow-1 flex-y-center flex-x-center buy-now">立即购买</view> -->
            </view>
        </view>